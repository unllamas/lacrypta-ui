{
  "name": "monorepo-ui",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,mdx}\"",
    "build:ui": "pnpm --filter @unllamas/lacrypta-ui build",
    "web:dev": "pnpm --filter @repo/web dev",
    "doc:dev": "pnpm --filter @repo/docs dev"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
